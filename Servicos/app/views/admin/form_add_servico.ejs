<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Formulario de Serviços</title>
		
		<link href="css/style.css" rel="stylesheet">

		
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
	
	</head>

	<body style="background-color: #e9e9e9;background-position:center;  background-image: url(images/servicosFundoc.png);
	background-repeat: no-repeat;" >

	<div  class="navbar navbar-expand-lg navbar-dark bg-dark " id="nav" >
				
			<form class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="formDeSubmit" name="formDeSubmit" accept-charset="UTF-8" role="form"   method="post">
			
			<img src="images/logo.png" width="8%" height="8%"/>
			<input class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active "  type="text"  id="emailInput" name="emailInput" value="<%= email %>" style="background-color: transparent; border: 0; color: white;"  >
			<div class="nav nav-pills nav-fill" id="navbarNavAltMarkup" >
				
			  <div class="navbar-nav">
				<a class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoHome" href="#">Home <span class="sr-only">(current)</span></a>
				<a  class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoServicos" href="#">Serviços <span class="sr-only">(current)</span></a>
				<a  class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoMeusServicos" href="#">Meus Serviços <span class="sr-only">(current)</span></a>
				<a class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoAdmin" href="#">Novo Serviço <span class="sr-only">(current)</span></a>

				
			  </div>
			</div>
			
		</form>

		<script>
			
		BotaoHome.addEventListener('click', function(){   
					document.formDeSubmit.action = "/home";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoServicos.addEventListener('click', function(){   
					document.formDeSubmit.action = "/servicos";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoMeusServicos.addEventListener('click', function(){   
					document.formDeSubmit.action = "/meusservicos";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoAdmin.addEventListener('click', function(){   
					document.formDeSubmit.action = "/formulario_inclusao_servico";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});


		</script>
		  </div>

		  
	    <div class="container">
		<% if(validacao.length > 0) {%>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<%for(var i = 0; i < validacao.length; i++) { %>
							<li><%= validacao[i].msg%></li>
					
							<% } %>
						</ul>
					</div>
				</div>
			</div>
			<% } %>
	    	<div class="row">
	    		<div class="col-md-12">
					<form id="formCadastrar" name="formCadastrar" action="/servicos/salvar" method="post">
						<div class="form-group">
							<label for="titulo">Título:</label>
							<input type="text" class="form-control" id="titulo" name="titulo">
						</div>

						<div class="form-group">
							<label for="pwd">Descrição:</label>
							<textarea class="form-control" id="descricao" name="descricao"></textarea>
						</div>

					

						
						<a class="btn navbar-dark bg-dark nav-item  active " onclick="BotaoServicos1()"   href="#">Cadastrar <span class="sr-only">(current)</span></a>
						
					</form>
					
					<script type="text/javascript">

						
						
					
						function BotaoServicos1(){
							if (document.formCadastrar.titulo.value =='' || document.formCadastrar.descricao.value =='')  {  
        						alert("Por favor, preencha os campos corretamente.");  
							}else{		 
								document.formCadastrar.action="/servicos/salvar";
								document.formCadastrar.submit();
								alert("Serviço cadastrado com sucesso!");
								document.formCadastrar.titulo.value =''
								document.formCadastrar.descricao.value =''
							}
							
						}

						function reload(){
							window.location.reload();
						}
						

		</script>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
			
	</body>
</html>
<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Lista de Serviços</title>
		
		<!-- JQuery -->

		<!-- bootstrap - link cdn -->
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		
		
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
	
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">


	</head>

	<body style="background-color: #e9e9e9;background-position:center;  background-image: url(images/servicosFundoc.png);
	background-repeat: no-repeat;" >

		

	<nav  class="navbar navbar-expand-lg navbar-dark bg-dark " >
				
			<form class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="formDeSubmit" name="formDeSubmit" accept-charset="UTF-8" role="form"   method="post">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			  <span class="navbar-toggler-icon"></span>
			</button>
			<img src="images/logo.png" width="8%" height="8%"/>
			<input class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " readonly="readonly"  type="text"  id="emailInput" name="emailInput" value="<%= email %>" style="background-color: transparent; border: 0; color: white;"  >
			<div class="nav nav-pills nav-fill" id="navbarNavAltMarkup" >
				
					<div class="navbar-nav">
							<a class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoHome" href="#"><i class="fas fa-home"> Home</i>  <span class="glyphicon glyphicon-plus"></span></a>
							<a  class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoServicos" href="#"><i class="fas fa-clipboard-list"> Serviços</i>  <span class="glyphicon glyphicon-plus"></span></a>
							<a  class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoMeusServicos" href="#"><i class="fab fa-black-tie"> Meus Serviços</i> <span class="sr-only">(current)</span></a>
							<a class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " id="BotaoAdmin" href="#"><i class="far fa-plus-square"> Novo Serviço</i>  <span class="sr-only">(current)</span></a>
							<a class="navbar navbar-expand-lg navbar-dark bg-dark nav-item nav-link active " style="position: absolute; left: 110%;"  id="logOutButton" href="#"><i class="fas fa-door-open"> Sair</i></a>

						</div>
			</div>
			
		</form>

		<script>
			logOutButton.addEventListener('click', function(){   
					document.formDeSubmit.action = "/";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});

		BotaoHome.addEventListener('click', function(){   
					document.formDeSubmit.action = "/home";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoServicos.addEventListener('click', function(){   
					document.formDeSubmit.action = "/servicos";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoMeusServicos.addEventListener('click', function(){   
					document.formDeSubmit.action = "/meusservicos";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});
		BotaoAdmin.addEventListener('click', function(){   
					document.formDeSubmit.action = "/formulario_inclusao_servico";
					 document.formDeSubmit.submit();  
				   //document.getElementById("formDeSubmit").submit();
		
		});


		</script>
		  </nav>

		  <br>
		  <a href="#" style="position: absolute;  left: 10%; " onclick="atualizarPagina()" class="btn btn-primary navbar-btn" ><i class="fas fa-sync-alt"> Atualizar Serviços</i> </a>
		  <script>
			  function atualizarPagina(){
				location.reload();
			  }
			 
		  </script>
		  <br>
		  <br>

	    <div class="container">
	    	<% if(servicos.length > 0){%>

				<%for(var i = 0; i < servicos.length; i++) {%>
					
	    	<div class="row">
	    		<div class="col-md-12">
	    			<div class="noticia_wrapper">
						  		
		    			<a href="servico?id_servico=<%= servicos[i].id_servico %>" class="noticia_titulo"><%= servicos[i].servico%></a>
		    			<span class="noticia_data"><%= servicos[i].categoria%></span>
		    			<br />
		    			<p class="noticia_resumo">
		    				<%= servicos[i].descricao%>
						</p>
						<span class="noticia_data"><%= servicos[i].valor%></span>
						<a href="meusservicos/del?id_servico=<%= servicos[i].id_servico %>" style="position: absolute; top: 60%; left: 80%; " class="btn btn-danger navbar-btn"    href="#"><i class="far fa-trash-alt"> Deletar</i> </a>
						
		    		</div>
		    	</div>
			</div>
			<% } %>
			<% } %>
			
	
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
			
	</body>
</html>